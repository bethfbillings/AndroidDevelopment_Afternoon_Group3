<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/statisticsTV"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:layout_margin="20dp"
        android:text="@string/Statistics"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/correctTV"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#47E142"
            android:gravity="center"
            android:text="@string/String"
            android:textSize="45sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/correctPercentTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFFFFF"
            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/incorrectTV"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="20sp"
            android:textSize="50sp"
            android:background="#F43F35"
            android:text="@string/Incorrect"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/incorrectPercentTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:textSize="40sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalTV"
            android:layout_width="20dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:textSize="50sp"
            android:layout_weight="1"
            android:background="#ECA75D"
            android:gravity="center"
            android:text="@string/Total"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totalCountTV"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:textSize="28sp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="#" />
    </LinearLayout>

    <Button
        android:id="@+id/homeBTN"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:textSize="28sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:onClick="home"
        android:text="@string/Home" />

</LinearLayout>