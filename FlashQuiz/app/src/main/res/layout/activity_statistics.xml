<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/statisticsTV"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Statistics"
        android:textColor="#02088B"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/correctTV"
            android:layout_width="10dp"
            android:layout_height="83dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#47E142"
            android:gravity="left"
            android:text="String"
            android:textSize="45sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/correctPercentTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFFFFF"
            android:textSize="28dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/incorrectTV"
            android:layout_width="132dp"
            android:layout_height="106dp"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:background="#F43F35"
            android:gravity="left"
            android:text="Incorrect"
            android:textSize="50sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/incorrectPercentTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="%"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalTV"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#ECA75D"
            android:gravity="left"
            android:text="Total"
            android:textSize="50sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totalCountTV"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="#"
            android:textSize="28sp" />
    </LinearLayout>

    <Button
        android:id="@+id/homeBTN"
        android:layout_width="176dp"
        android:layout_height="114dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:onClick="home"
        android:background="@drawable/button_border"
        android:text="Home"
        android:textSize="28sp" />

</LinearLayout>